{
  "name": "microlink-cdn",
  "description": "Static Content Delivery Network for Microlink folks assets",
  "homepage": "https://github.com/microlinkhq/microlink-cdn",
  "version": "0.0.0",
  "bin": {
    "microlink-cdn": "bin/index.js"
  },
  "author": {
    "email": "hello@microlink.io",
    "name": "microlink.io",
    "url": "https://microlink.io"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microlinkhq/microlink-cdn.git"
  },
  "bugs": {
    "url": "https://github.com/microlinkhq/microlink-cdn/issues"
  },
  "keywords": [
    "assets",
    "cdn",
    "microlink"
  ],
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "@kikobeats/time-span": "latest",
    "@ksmithut/prettier-standard": "latest",
    "@microlink/demo-links": "latest",
    "@microlink/mql": "latest",
    "@microlink/recipes": "latest",
    "beauty-error": "latest",
    "browserless": "latest",
    "calc-percent": "latest",
    "cartesian": "latest",
    "debug-logfmt": "latest",
    "download": "latest",
    "filenamify-url": "2",
    "finepack": "latest",
    "fs-extra": "latest",
    "git-authors-cli": "latest",
    "git-dirty": "latest",
    "github-generate-release": "latest",
    "got": "13",
    "listr": "latest",
    "lodash": "latest",
    "meow": "9",
    "nano-staged": "latest",
    "p-all": "3",
    "picocolors": "latest",
    "prettier": "latest",
    "pretty-bytes": "5",
    "pretty-ms": "7",
    "puppeteer": "latest",
    "simple-git-hooks": "latest",
    "standard": "latest",
    "standard-markdown": "latest",
    "standard-version": "latest",
    "unique-random-array": "2"
  },
  "engines": {
    "node": ">= 18"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node scripts/build.js dist https://cdn.microlink.io/",
    "clean": "rm -rf node_modules",
    "dev": "watchexec --exts js -- node scripts/build.js dist https://cdn.microlink.io/",
    "lint": "standard-markdown README.md && standard",
    "postbuild": "node scripts/postbuild.js",
    "postrelease": "npm run release:tags && npm run release:github",
    "prerelease": "git-dirty && npm run update:check && npm test && git-authors-cli",
    "pretest": "npm run lint",
    "pretty": "prettier-standard index.js {core,test,bin,scripts}/**/*.js --single-quote --print-width 100",
    "release": "git-authors-cli && git add package.json && standard-version -a",
    "release:github": "github-generate-release",
    "release:tags": "git push --follow-tags origin master",
    "test": "exit 0"
  },
  "private": true,
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "nano-staged": {
    "*.js": [
      "prettier-standard",
      "standard --fix"
    ],
    "*.md": [
      "standard-markdown"
    ],
    "package.json": [
      "finepack"
    ]
  },
  "simple-git-hooks": {
    "commit-msg": "npx commitlint --edit",
    "pre-commit": "npx nano-staged"
  }
}
