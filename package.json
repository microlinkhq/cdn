{
  "name": "microlink-cdn",
  "description": "Static Content Delivery Network for Microlink folks assets",
  "homepage": "https://nicedoc.io/microlinkhq/microlink-cdn",
  "version": "0.0.0",
  "author": {
    "email": "hello@microlink.io",
    "name": "microlink.io",
    "url": "https://microlink.io"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microlinkhq/microlink-cdn.git"
  },
  "bugs": {
    "url": "https://github.com/microlinkhq/microlink-cdn/issues"
  },
  "keywords": [
    "assets",
    "cdn",
    "microlink"
  ],
  "dependencies": {
    "@microlink/mql": "~0.3.13",
    "unique-random-array": "~2.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "@microlink/demo-links": "latest",
    "calc-percent": "latest",
    "conventional-github-releaser": "latest",
    "debug-logfmt": "latest",
    "download": "latest",
    "finepack": "latest",
    "fs-extra": "latest",
    "git-authors-cli": "latest",
    "git-dirty": "latest",
    "husky": "latest",
    "lint-staged": "latest",
    "listr": "latest",
    "lodash": "latest",
    "p-all": "latest",
    "prettier-standard": "latest",
    "puppeteer": "latest",
    "standard": "latest",
    "standard-markdown": "latest",
    "standard-version": "latest"
  },
  "engines": {
    "node": ">= 8"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node scripts/build",
    "clean": "rm -rf node_modules",
    "lint": "standard-markdown README.md && standard",
    "postrelease": "npm run release:tags && npm run release:github",
    "precommit": "lint-staged",
    "prerelease": "git-dirty && npm run update:check && npm test && git-authors-cli",
    "pretest": "npm run lint",
    "pretty": "prettier-standard index.js {core,test,bin,scripts}/**/*.js --single-quote --print-width 100",
    "release": "git-authors-cli && git add package.json && standard-version -a",
    "release:github": "conventional-github-releaser -p angular",
    "release:tags": "git push --follow-tags origin master",
    "test": "exit 0"
  },
  "private": true,
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "package.json": [
        "finepack",
        "git add"
      ],
      "*.js": [
        "prettier-standard",
        "git add"
      ],
      "*.md": [
        "standard-markdown",
        "git add"
      ]
    }
  }
}
